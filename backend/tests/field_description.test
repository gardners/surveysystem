@description HTML description field: Answer a question in a survey

# Create a dummy survey
definesurvey field_description
version 2
Silly test survey updated
without python
question1:This is the first title:This is the first description:INT:0::-1:-1:0:0::
question2:This is the second title:This is the <strong>second HTML description</strong>:INT:0::-1:-1:0:0::

endofsurvey

# Request creation of a  new session
request 200 /newsession?surveyid=field_description

# Get the session ID that newsession should have returned
extract_sessionid

# Check that we have an empty session file created
verify_session(skip_headers)
field_description/0a7caf5b02adad7583c7bfae30f6f119cb3581cc
endofsession

# Ask for next question
request 200 /nextquestion?sessionid=$SESSION
match_string {"status": 0, "message": "", "next_questions": [{"id": "question1", "name": "question1", "title": "This is the first title", "description": "This is the first description", "type": "INT", "default_value": "", "min_value": -1, "max_value": -1, "choices": [], "unit": ""}]}

# answer question
request 200 /addanswer?sessionid=$SESSION&answer=question1::5:0:0:0:0:0:0:
match_string {"status": 0, "message": "", "next_questions": [{"id": "question2", "name": "question2", "title": "This is the second title", "description": "This is the <strong>second HTML description<\/strong>", "type": "INT", "default_value": "", "min_value": -1, "max_value": -1, "choices": [], "unit": ""}]}

request 200 /addanswer?sessionid=$SESSION&answer=question2::-5:0:0:0:0:0:0:
match_string {"status": 0, "message": "", "next_questions": []}


# Make sure answer ends up in file
verify_session(skip_headers)
field_description/0a7caf5b02adad7583c7bfae30f6f119cb3581cc
question1:INT::5:0:0:0:0:0:0::0:<UTIME>
question2:INT::-5:0:0:0:0:0:0::0:<UTIME>
endofsession
