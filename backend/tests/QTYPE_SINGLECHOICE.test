match_string {"status": 0, "message": "", "next_questions": [{"id": "singlechoice", "name": "singlechoice", "title": "Select one from the following", "description": "Select one from the following", "type": "SINGLECHOICE", "default_value": "", "min_value": -1, "max_value": -1, "choices": ["Zaphod", "Marvin", "Arthur", "Ford", "Trillan"], "unit": ""}]}

