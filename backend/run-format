#!/bin/bash

# include utils
source ./scripts/inc/utils

SRC_DIR=./src
INC_DIR=./include

# exclude automatically generated files by mak
echo -e "$(YELLOW "--- 1/2 formatting source files: $SRC_DIR ---")\n"
find "$SRC_DIR" -iname *.h -o -iname *.c ! -iname 'question_types.*' | xargs clang-format-9 --verbose -i --style=file

echo -e "\n$(YELLOW "--- 2/2 formatting surce files: $INC_DIR ---")\n"
find "$INC_DIR" -iname *.h ! -iname 'question_types.*' | xargs clang-format-9 --verbose -i --style=file

echo -e "\n$(GREEN "--- done ---")\n"

